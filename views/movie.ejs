<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Groovy Reviews - Movies</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
  <link rel="stylesheet" href="/css/movie.css">
</head>
<body>
  <!-- ðŸ”¹ Top Navigation -->
  <div class="topnav">
    <b><a href="/" class="movie">Groovy Reviews</a></b>
    <div class="search">
      <form role="search" id="form" class="form" action="/search" method="GET">
        <input type="search" class="searchbox" id="search" name="q" placeholder="Search movies...">
      </form>
    </div>
  </div>

  <!-- ðŸ”¹ Movie Posters -->
  <section id="section">
    <% if (movies && movies.length > 0) { %>
      <div class="row">
  <% movies.forEach(m => { %>
    <div class="column">
      <a href="/movie/<%= m.id %>" style="text-decoration: none; color: inherit;">
        <div class="card">
          <center>
            <img src="<%= m.poster %>" alt="<%= m.title %>" class="thumbnail">
          </center>
          <b><h3><%= m.title %></h3></b>
        </div>
      </a>
    </div>
  <% }) %>
</div>
    <% } else { %>
      <p style="text-align:center;">No movies found.</p>
    <% } %>
  </section>

  <!-- ðŸ”¹ Footer -->
  <div class="footer">
    <b><p class="foot">Ratan. All rights reserved. | GroovyReviews Â© 2024</p></b>
  </div>
</body>
</html>
